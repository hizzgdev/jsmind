{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "stripInternal": true,
        "allowJs": true,
        "checkJs": false,
        "rootDirs": ["../src"],
        "outDir": "./generated",
        "baseUrl": "."
    },
    "include" : ["../src/**/*.ts", "../src/**/*.js"]
}
